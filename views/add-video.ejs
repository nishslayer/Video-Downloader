<html>

<head>
    <title>
        <%= title %>
    </title>
    <link href="https://unpkg.com/tailwindcss@^2/dist/tailwind.min.css" rel="stylesheet" type="text/css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" type="text/css">
</head>

<body>
    <div class="py-20 h-screen bg-gray-300 px-2">
        <div class="max-w-md mx-auto bg-white rounded-lg overflow-hidden md:max-w-lg">
            <form action="/" method="post" enctype="multipart/form-data">
                <div class="md:flex">
                    <div class="w-full px-4 py-6 ">
                        <div class="mb-1">
                            <span class="text-sm">Username</span>
                            <input type="text"
                                class="h-12 px-3 w-full border-blue-400 border-2 rounded focus:outline-none focus:border-blue-600"
                                name="username" required>
                        </div>
                        <div class="mb-1">
                            <span class="text-sm">Name</span>
                            <input type="text"
                                class="h-12 px-3 w-full border-blue-400 border-2 rounded focus:outline-none focus:border-blue-600"
                                name="name" required>
                        </div>
                        <div class="mb-1">
                            <span class="text-sm">Video Title</span>
                            <input type="text"
                                class="h-12 px-3 w-full border-blue-400 border-2 rounded focus:outline-none focus:border-blue-600"
                                name="video_title" required>
                        </div>
                        <div class="mb-1">
                            <span class="text-sm">Group</span>
                            <input type="text"
                                class="h-12 px-3 w-full border-blue-400 border-2 rounded focus:outline-none focus:border-blue-600"
                                name="group" required>
                        </div>
                        <div class="mb-1">
                            <span class="text-sm">Video URL</span>
                            <input type="text"
                                class="h-12 px-3 w-full border-blue-400 border-2 rounded focus:outline-none focus:border-blue-600"
                                name="video_url" >
                        </div>

                        <div class="mb-1">
                            <span>Attachments</span>
                            <div class="relative border-dotted h-32 rounded-lg border-dashed border-2 border-blue-700 bg-gray-100 flex justify-center items-center">
                                <div class="absolute">
                                    <div class="flex flex-col items-center"> <i class="fa fa-folder-open fa-3x text-blue-700"></i> <span class="block text-gray-400 font-normal">Attach video</span>
                                    </div>
                                </div>
                                <input type="file" class="h-full w-full opacity-0" name="video_file">
                            </div>
                        </div>
                        <div class="mt-3 text-right">
                            <a href="#">Cancel</a>
                            <button class="ml-2 h-10 w-32 bg-blue-600 rounded text-white hover:bg-blue-700"
                                type="submit">Submit</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</body>
<!-- <script src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.x.x/dist/alpine.min.js"></script> -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

</html>